<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="1200.0"
            prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="chatbot.gui.controller.MainWindow">
    <children>
        <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" hvalue="1.0" prefHeight="1150.0" prefWidth="800.0"
                    vvalue="1.0">
            <content>
                <VBox fx:id="dialogContainer" prefHeight="1150.0" prefWidth="800.0"
                      style="-fx-padding: 10; -fx-background-image: url(./images/bg.jpg); -fx-background-position: center center; -fx-background-size: cover" />
            </content>
        </ScrollPane>
        <TextField fx:id="userInput" onAction="#handleUserInput" prefHeight="50.0" prefWidth="800.0"
                   AnchorPane.bottomAnchor="1.0" promptText="Type your command here traveller!" />
        <Button fx:id="sendButton" layoutX="720.0" layoutY="1150.0" mnemonicParsing="false" onAction="#handleUserInput"
                prefHeight="50.0" prefWidth="80.0" text="Send" />
    </children>
</AnchorPane>